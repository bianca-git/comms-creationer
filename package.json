{
  "name": "staff-communication-excel-addon",
  "version": "1.0.0",
  "description": "Internal staff communication tool with advanced mail merge capabilities for Excel",
  "main": "dist/taskpane.html",
  "scripts": {
    "build": "webpack --mode=production",
    "build:dev": "webpack --mode=development",
    "dev": "webpack serve --mode=development --open",
    "start": "webpack serve --mode=development",
    "test": "echo \"Tests will be implemented\" && exit 0",
    "lint": "echo \"Linting will be implemented\" && exit 0",
    "deploy": "npm run build && node scripts/deploy.js",
    "deploy:github": "npm run build && node scripts/deploy-github.js",
    "validate": "node scripts/validate-manifest.js",
    "serve": "python3 -m http.server 3000 --directory dist"
  },
  "keywords": [
    "office-addin",
    "excel",
    "mail-merge",
    "staff-communication",
    "sharepoint",
    "internal-tools"
